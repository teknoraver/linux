&vi_subsys {
	board_compat = "eic7700,dvb_vi";
	eswin,isp_dvp0_hor = <3280>;
	eswin,isp_dvp0_ver = <2464>;
	phy_mode = <2>; //5: 6x2lanes, 2: 3x4lanes
	vvcam_isp_0: vvcam_isp@0 {
		compatible = "verisilicon,isp-v4l2";
		id = <0>;
		status = "okay";
		dma-noncoherent;
		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				#address-cells = <1>;
				#size-cells = <0>;
				reg = <0>;
				vvcam_isp_input_port: endpoint@0 {
					remote-endpoint = <&mipi_csi2_output1>;
				};
			};

			port@1 {
				reg = <1>;
				vvcam_isp_port0_mp: endpoint {
					remote-endpoint = <&vvcam_video0>;
				};
			};

			port@2 {
				reg = <2>;
				vvcam_isp_port0_sp1: endpoint {
					remote-endpoint = <&vvcam_video1>;
				};
			};

			port@3 {
				reg = <3>;
				vvcam_isp_port0_sp2: endpoint {
					remote-endpoint = <&vvcam_video2>;
				};
			};

			port@4 {
				reg = <4>;
				vvcam_isp_port0_raw: endpoint {
					remote-endpoint = <&vvcam_video3>;
				};
			};
		};
	};

	vvcam_vb: vvcam-vb@0 {
		compatible = "verisilicon,vb";
		status = "okay";
		#size-cells = <2>;
		dma-noncoherent;
		dma-ranges = <0x0 0x20000000 0x0 0x80000000 0x0 0x40000000>;
		iommus = <&smmu0 WIN2030_SID_ISP0>;
	};

	vvcam_video_0: vvcam_video@0 {
		compatible = "verisilicon,video";
		id = <0>;
		status = "okay";
		#size-cells = <2>;
		dma-noncoherent;
		dma-ranges = <0x0 0x20000000 0x0 0x80000000 0x0 0x40000000>;
		iommus = <&smmu0 WIN2030_SID_ISP0>;

		ports {
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				reg = <0>;
				vvcam_video0: endpoint {
					remote-endpoint = <&vvcam_isp_port0_mp>;
				};
			};

			port@1 {
				reg = <1>;
				vvcam_video1: endpoint {
					remote-endpoint = <&vvcam_isp_port0_sp1>;
				};
			};

			port@2 {
				reg = <2>;
				vvcam_video2: endpoint {
					remote-endpoint = <&vvcam_isp_port0_sp2>;
				};
			};

			port@3 {
				reg = <3>;
				vvcam_video3: endpoint {
					remote-endpoint = <&vvcam_isp_port0_raw>;
				};
			};
		};
	};
};

&dvp2axi {
	status = "okay";
};

&dvp2axi_mipi_lvds {
	status = "okay";
	dvp2axi_id = <0>;
	port@0 {
		axi2dvp_mipi2_in0: endpoint@0 {
			remote-endpoint = <&mipi_csi2_output0>;
		};
	};
};

&dvp2axi_mipi_lvds1 {
	status = "disabled";
	dvp2axi_id = <1>;
};

&dvp2axi_mipi_lvds2 {
	status = "disabled";
	dvp2axi_id = <2>;
	port@0 {
		axi2dvp_mipi2_in2: endpoint@0 {
			remote-endpoint = <&mipi_csi2_2_output0>;
		};
	};
};



&mipi_csi2_0 {
	num_lanes = <4>;
	snps,en-ppi-width = <1>; // 1: 16-bit, 0: 8-bit
	status = "okay";
	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@0 {
			reg = <0>;
			#address-cells = <1>;
			#size-cells = <0>;

			mipi0_csi2_input: endpoint@0 {
				remote-endpoint = <&csidphy0_out>;
			};
		};

		port@1 {
			reg = <1>;
			#address-cells = <1>;
			#size-cells = <0>;

			mipi_csi2_output0: endpoint@1 {
				remote-endpoint = <&axi2dvp_mipi2_in0>;
			};
		};
		port@2 {
			reg = <2>;
			#address-cells = <1>;
			#size-cells = <0>;

			mipi_csi2_output1: endpoint@2 {
				remote-endpoint = <&vvcam_isp_input_port>;
			};
		};
	};
};

&mipi_csi2_2 {
	num_lanes = <4>;
	snps,en-ppi-width = <1>; // 1: 16-bit, 0: 8-bit
	status = "disabled";
	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@0 {
			reg = <0>;
			#address-cells = <1>;
			#size-cells = <0>;

			mipi_csi2_2_input: endpoint@0 {
				remote-endpoint = <&csidphy2_out>;
			};
		};

		port@1 {
			reg = <1>;
			#address-cells = <1>;
			#size-cells = <0>;

			mipi_csi2_2_output0: endpoint@1 {
				remote-endpoint = <&axi2dvp_mipi2_in2>;
			};
		};
	};
};




&csi2_dphy_hw {
	lanes = <1 2 3 4>;
	status = "okay";
};

&csi2_dphy0 {
	status = "okay";
	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@0 {
			reg = <0>;
			#address-cells = <1>;
			#size-cells = <0>;

			mipidphy0_in_ucam0: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&imx219_out0>;
			};
		};

		port@1 {
			reg = <1>;
			#address-cells = <1>;
			#size-cells = <0>;

			csidphy0_out: endpoint@1 {
				reg = <1>;
				remote-endpoint = <&mipi0_csi2_input>;
			};
		};
	};
};

&csi2_dphy_hw2 {
	lanes = <1 2 3 4>;
	status = "disabled";
};

&csi2_dphy2 {
	status = "disabled";
	ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port@0 {
			reg = <0>;
			#address-cells = <1>;
			#size-cells = <0>;

			mipidphy2_in_ucam0: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&imx219_out2>;
				data-lanes = <1 2 3 4>;
			};
		};

		port@1 {
			reg = <1>;
			#address-cells = <1>;
			#size-cells = <0>;

			csidphy2_out: endpoint@1 {
				reg = <1>;
				remote-endpoint = <&mipi_csi2_2_input>;
			};
		};
	};
};

&d0_i2c1 {
	status = "okay";
	imx219_0: imx219@10 {
		compatible = "sony,imx219";
		status = "okay";
		address-cells = <1>;
		size-cells = <0>;
		reg = <0x10>;

		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio72_default &pinctrl_gpio70_default>;
		mclk-gpios = <&portc 8 GPIO_ACTIVE_HIGH>;
		xvs-gpios = <&portc 6 GPIO_ACTIVE_HIGH>;

		eswin,camera-module-index = <0>;
		eswin,camera-module-facing = "back";
		eswin,camera-module-name = "rpi-camera-v2";
		eswin,camera-module-lens-name = "default";

		port {
			imx219_out0: endpoint {
				remote-endpoint = <&mipidphy0_in_ucam0>;
				data-lanes = <1 2 3 4>;
				link-frequencies = /bits/ 64 <364000000>;
			};
		};
	};
};

&d0_aon_i2c0 {
	status = "disabled";
	imx219_1: imx219@10 {
		compatible = "sony,imx219";
		status = "disabled";
		address-cells = <1>;
		size-cells = <0>;
		reg = <0x10>;

		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_gpio78_default>;
		mclk-gpios = <&portc 14 GPIO_ACTIVE_HIGH>;

		eswin,camera-module-index = <0>;
		eswin,camera-module-facing = "back";
		eswin,camera-module-name = "rpi-camera-v2";
		eswin,camera-module-lens-name = "default";

		port {
			imx219_out2: endpoint {
				remote-endpoint = <&mipidphy2_in_ucam0>;
				data-lanes = <1 2 3 4>;
				link-frequencies = /bits/ 64 <364000000>;
			};
		};
	};
};

&isp_0 {
	status = "okay";
};

&isp_1 {
	status = "disabled";
};
